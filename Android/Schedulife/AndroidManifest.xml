<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lmaas.schedulife"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <application
        android:name="com.lmaas.schedulife.SchedulifeApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="DATABASE"
            android:value="schedulife.db" />
        <meta-data
            android:name="VERSION"
            android:value="0.1" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.lmaas.schedulife.sqlite.entities" />

        <activity
            android:name="com.lmaas.schedulife.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.INTRO" />
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lmaas.schedulife.activities.AddTaskActivity"
            android:label="@string/title_activity_add_task"
            android:parentActivityName="com.lmaas.schedulife.MainActivity"
            android:windowSoftInputMode="adjustPan" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lmaas.schedulife.MainActivity" />
        </activity>
        <activity
            android:name="com.lmaas.schedulife.activities.PrioritizeActivity"
            android:label="@string/title_activity_prioritize"
            android:parentActivityName="com.lmaas.schedulife.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lmaas.schedulife.MainActivity" />
        </activity>
    </application>

</manifest>
